<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/black_spotify">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSong"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/memories" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/lbSongName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bầu Trời Mới"
                android:textColor="@color/white_spotify"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbSingerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Da Lab - Minh Tốc"
                android:textColor="@color/white_spotify"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lbId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mã"
                android:visibility="gone" />


        </LinearLayout>
        <Button
            android:focusable="false"
            app:backgroundTint = "@null"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:id="@+id/btnRemove"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>
</LinearLayout>